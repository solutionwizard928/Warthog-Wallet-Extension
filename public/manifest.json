{
  "manifest_version": 3,
  "name": "WARTHOG NETWORK",
  "version": "1.0",
  "description": "WARTHOG NETWORK A Chrome Extension for managing cryptocurrency wallets and facilitating secure transactions.",
  "icons": {
    "16": "/logo.png",
    "32": "/logo.png",
    "48": "/logo.png",
    "128": "/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "WARTHOG NETWORK",
    "default_icon": {
      "16": "/logo.png",
      "32": "/logo.png"
    }
  },
  "permissions": ["tabs", "storage", "scripting", "activeTab", "cookies", "storage"],
  "host_permissions": ["*://*/*", "<all_urls>"],
  "options_page": "index.html",
  "homepage_url": "https://warthog.network"
}
